cmake_minimum_required(VERSION 2.8.3 FATAL_ERROR)
project(mat_to_eigen_matrix)
# convert Matlab data in .mat files to Eigen::Matrix format in C/C++
# Zekun 2015-06

# C++ 11 is needed for some special types
add_definitions(
  -std=c++11
)

# MATLAB C/C++ headers
include_directories(
  /usr/local/MATLAB/R2015a/extern/include
)

# MATLAB libraries
link_directories(
  /usr/local/lib
  /usr/lib
  /usr/local/MATLAB/R2015a/bin/glnxa64
  /usr/local/MATLAB/R2015a/sys/os/glnxa64
)

add_library(mat_eigen SHARED src/mat_to_eigen.cpp src/eigen_to_mat.cpp)
target_link_libraries(
  mat_eigen
  mat mx mwfl mwi18n
  stdc++ m
)

add_library(mat_eigen_static STATIC src/mat_to_eigen.cpp src/eigen_to_mat.cpp)
target_link_libraries(
  mat_eigen
  mat mx mwfl mwi18n
  stdc++ m
)

add_executable(test src/test.cpp)
target_link_libraries(
  test
  mat_eigen
  mat mx mwfl mwi18n
  stdc++ m
)

